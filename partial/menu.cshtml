<nav class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="clearfix hidden-xs hidden-sm pull-left mm-brand-image">
            <img alt="Brand" src="/assets/monmould_menu_logo_full.png" class="img-responsive pull-left">
        </div>
        @* Brand and toggle get grouped for better mobile display *@
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand hidden-md hidden-lg" href="/@(model.locale === model.defaultLocale ? '' : model.locale)">
                <img alt="Brand" src="/assets/monmould_logo_short.png" class="img-responsive">
            </a>
        </div>

        @* Collect the nav links, forms, and other content for toggling *@
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <div class="mm-brand hidden-xs hidden-sm clearfix">
                <div class="mm-brand-text pull-left">
                    <span>近德模塑 M<span style="color: red;">o</span>n Mould</span>
                </div>
            </div>
            <ul class="nav navbar-nav">
                @{
                    var collection = model.collections["root_" + model.locale];
                    var collectionSorted = collection.sort(function(a, b) { 
                        return a.menuPosition - b.menuPosition;
                    });

                    collectionSorted.forEach(function(a) {
                        <li><a href="/@a.path">@a.title</a></li>
                    });
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @model.locales.forEach(function(l) {
                    var href = l === model.defaultLocale ? "" : l;
                    <li class="@(model.locale === l ? 'active' : '')">
                        <a href="/@html.raw(href)">@l.toUpperCase()</a>
                    </li>
                })
            </ul>
        </div>
        @* /.navbar-collapse *@
    </div>
    @* /.container-fluid *@
</nav>